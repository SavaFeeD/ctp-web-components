{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowJs": false,
        "declaration": false,
        "paths": {
            "*": ["src/*.ts"],
            "~/*": ["src/*"],
            "@/*": ["src/components/*"]
        }
    },
    "include": [
        "types/*.d.ts",
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}